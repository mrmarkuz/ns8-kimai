{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignorePaths": [
    "**/ui/**",
    "**/.devcontainer/**"
  ],
  "regexManagers": [
    {
      "fileMatch": ["build-images.sh"],
      "matchStrings": [
        "docker\\.io/kimai/kimai2:(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "kimai/kimai2"
    },
    {
      "fileMatch": ["build-images.sh"],
      "matchStrings": ["docker\\.io/mariadb:(?<currentValue>[^\\s]+)"],
      "depNameTemplate": "mariadb",
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["kimai/kimai2"],
      "versioning": "regex:^apache-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)"
    },
    {
      "matchPackageNames": ["mariadb"],
      "allowedVersions": "<= 10.11"
    }
  ]
}
